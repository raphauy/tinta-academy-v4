generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// USER & AUTHENTICATION
// ============================================

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  image     String?
  role      Role?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  otpTokens OtpToken[]
  student   Student?
  educator  Educator?
  orders    Order[]

  @@index([email])
  @@index([isActive])
}

model OtpToken {
  id        String    @id @default(cuid())
  token     String
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

// ============================================
// STUDENT
// ============================================

model Student {
  id               String    @id @default(cuid())
  userId           String    @unique
  firstName        String?
  lastName         String?
  identityDocument String?   // CI (Cédula de Identidad)
  dateOfBirth      DateTime?
  phone            String?
  address          String?
  city             String?
  zip              String?
  country          String?
  // Billing information
  billingName    String? // Nombre o razón social
  billingTaxId   String? // RUT/CI
  billingAddress String? // Dirección de facturación
  // Notification preferences
  notifyNewCourses    Boolean @default(true)
  notifyPromotions    Boolean @default(false)
  notifyCourseUpdates Boolean @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  enrollments Enrollment[]
  orders      Order[]

  @@index([userId])
}

// ============================================
// EDUCATOR
// ============================================

model Educator {
  id        String   @id @default(cuid())
  userId    String   @unique
  name      String
  title     String?
  bio       String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courses Course[]

  @@index([userId])
}

// ============================================
// COURSES & TAGS
// ============================================

model Tag {
  id      String   @id @default(cuid())
  name    String
  slug    String   @unique
  courses Course[]

  @@index([slug])
}

model Course {
  id                   String          @id @default(cuid())
  slug                 String          @unique
  title                String
  type                 CourseType
  modality             CourseModality
  description          String?
  startDate            DateTime?
  endDate              DateTime?
  duration             String?
  // Class schedule fields
  classDates           DateTime[]
  startTime            String?         // e.g. "17:00"
  classDuration        Int?            // duration per class in minutes
  examDate             DateTime?
  registrationDeadline DateTime?
  // Capacity and pricing
  maxCapacity          Int?
  enrolledCount        Int             @default(0)
  priceUSD             Float
  location             String?
  address              String?
  imageUrl             String?
  status               CourseStatus
  educatorId           String
  wsetLevel            Int?
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt

  educator    Educator         @relation(fields: [educatorId], references: [id])
  tags        Tag[]
  enrollments Enrollment[]
  materials   CourseMaterial[]
  orders      Order[]

  @@index([slug])
  @@index([educatorId])
  @@index([status])
  @@index([type])
  @@index([modality])
}

// ============================================
// COURSE MATERIALS
// ============================================

model CourseMaterial {
  id          String       @id @default(cuid())
  courseId    String
  name        String
  type        MaterialType
  url         String
  description String?
  order       Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId])
  @@index([order])
}

// ============================================
// NEWSLETTER
// ============================================

model NewsletterSubscription {
  id           String   @id @default(cuid())
  email        String   @unique
  subscribedAt DateTime @default(now())
  isActive     Boolean  @default(true)

  @@index([email])
  @@index([isActive])
}

// ============================================
// ENROLLMENT
// ============================================

model Enrollment {
  id         String           @id @default(cuid())
  studentId  String
  courseId   String
  enrolledAt DateTime         @default(now())
  status     EnrollmentStatus @default(pending)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course  Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([studentId, courseId])
  @@index([studentId])
  @@index([courseId])
  @@index([status])
}

// ============================================
// ORDERS
// ============================================

model Order {
  id                String        @id @default(cuid())
  orderNumber       String        @unique // format: TA-YYYYMMDD-XXXX
  userId            String
  courseId          String
  studentId         String? // linked after payment confirmed
  couponId          String? // linked to Coupon (added in 6.03)
  // Pricing
  originalPriceUSD  Float
  originalPriceUYU  Float?
  discountPercent   Float         @default(0)
  discountAmount    Float         @default(0)
  finalAmount       Float
  currency          Currency      @default(USD)
  // Payment
  paymentMethod     PaymentMethod
  status            OrderStatus   @default(created)
  // MercadoPago fields
  mpPreferenceId    String? // MercadoPago preference ID
  mpPaymentId       String? // MercadoPago payment ID
  mpStatus          String? // MercadoPago status
  mpStatusDetail    String? // MercadoPago status detail
  // Bank transfer fields
  bankAccountId     String? // linked to BankAccount (added in 6.02)
  transferReference String? // user reference/comment
  // Timestamps
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  paidAt            DateTime?
  cancelledAt       DateTime?
  refundedAt        DateTime?

  // Relations (user, course, student)
  user    User     @relation(fields: [userId], references: [id])
  course  Course   @relation(fields: [courseId], references: [id])
  student Student? @relation(fields: [studentId], references: [id])
  // Note: coupon and bankAccount relations added in 6.03 and 6.02

  @@index([userId])
  @@index([courseId])
  @@index([status])
  @@index([paymentMethod])
  @@index([orderNumber])
  @@index([mpPreferenceId])
  @@index([mpPaymentId])
}

// ============================================
// ENUMS
// ============================================

enum Role {
  superadmin
  educator
  student
}

enum CourseType {
  wset
  taller
  cata
  curso
}

enum CourseModality {
  presencial
  online
}

enum CourseStatus {
  draft
  announced
  enrolling
  full
  in_progress
  finished
  available
}

enum EnrollmentStatus {
  pending
  confirmed
  cancelled
}

enum MaterialType {
  link
  image
  document
  video
  other
}

enum OrderStatus {
  created
  pending_payment
  payment_processing
  paid
  cancelled
  refunded
  rejected
}

enum PaymentMethod {
  mercadopago
  bank_transfer
  free
}

enum Currency {
  USD
  UYU
}

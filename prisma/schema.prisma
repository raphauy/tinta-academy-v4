generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// USER & AUTHENTICATION
// ============================================

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  image     String?
  role      Role?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  otpTokens OtpToken[]
  student   Student?
  educator  Educator?

  @@index([email])
  @@index([isActive])
}

model OtpToken {
  id        String    @id @default(cuid())
  token     String
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

// ============================================
// STUDENT
// ============================================

model Student {
  id          String    @id @default(cuid())
  userId      String    @unique
  firstName   String?
  lastName    String?
  dateOfBirth DateTime?
  phone       String?
  address     String?
  city        String?
  zip         String?
  country     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// ============================================
// EDUCATOR
// ============================================

model Educator {
  id        String   @id @default(cuid())
  userId    String   @unique
  name      String
  title     String?
  bio       String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courses Course[]

  @@index([userId])
}

// ============================================
// COURSES & TAGS
// ============================================

model Tag {
  id      String   @id @default(cuid())
  name    String
  slug    String   @unique
  courses Course[]

  @@index([slug])
}

model Course {
  id             String          @id @default(cuid())
  slug           String          @unique
  title          String
  type           CourseType
  modality       CourseModality
  description    String?
  startDate      DateTime?
  endDate        DateTime?
  duration       String?
  maxCapacity    Int?
  enrolledCount  Int             @default(0)
  priceUSD       Float
  location       String?
  address        String?
  imageUrl       String?
  status         CourseStatus
  educatorId     String
  wsetLevel      Int?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  educator Educator @relation(fields: [educatorId], references: [id])
  tags     Tag[]

  @@index([slug])
  @@index([educatorId])
  @@index([status])
  @@index([type])
  @@index([modality])
}

// ============================================
// NEWSLETTER
// ============================================

model NewsletterSubscription {
  id           String   @id @default(cuid())
  email        String   @unique
  subscribedAt DateTime @default(now())
  isActive     Boolean  @default(true)

  @@index([email])
  @@index([isActive])
}

// ============================================
// ENUMS
// ============================================

enum Role {
  superadmin
  educator
  student
}

enum CourseType {
  wset
  taller
  cata
  curso
}

enum CourseModality {
  presencial
  online
}

enum CourseStatus {
  announced
  enrolling
  full
  in_progress
  finished
  available
}
